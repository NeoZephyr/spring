<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userService" class="com.pain.flame.service.impl.UserServiceImpl" />

    <bean id="userBeforeAdvice" class="com.pain.flame.advice.UserBeforeAdvice" />
    <bean id="userAroundAdvice" class="com.pain.flame.advice.UserAroundAdvice" />

    <bean id="userServiceProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="userService" />
        <property name="proxyInterfaces" value="com.pain.flame.service.UserService" />
        <!--<property name="interceptorNames" value="userBeforeAdvice,userAroundAdvice" />-->

        <property name="interceptorNames">
            <array>
                <value>userBeforeAdvice</value>
                <value>userAroundAdvice</value>
            </array>
        </property>
    </bean>
</beans>