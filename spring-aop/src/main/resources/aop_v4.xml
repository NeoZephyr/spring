<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userService" class="com.pain.flame.service.impl.UserServiceImpl" />

    <bean id="userBeforeAdvice" class="com.pain.flame.advice.UserBeforeAdvice" />
    <bean id="userAroundAdvice" class="com.pain.flame.advice.UserAroundAdvice" />

    <bean class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
        <property name="beanNames" value="*Service" />

        <!--为 true 则强制使用 cglib 动态代理-->
        <property name="optimize" value="true" />
        <property name="interceptorNames" value="userAroundAdvice" />
    </bean>
</beans>