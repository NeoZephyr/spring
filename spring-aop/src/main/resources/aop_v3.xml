<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd"
       xmlns:p="http://www.springframework.org/schema/p">

    <bean id="userService" class="com.pain.flame.service.impl.UserServiceImpl" />

    <bean id="userBeforeAdvice" class="com.pain.flame.advice.UserBeforeAdvice" />
    <bean id="userAroundAdvice" class="com.pain.flame.advice.UserAroundAdvice" />

    <bean id="userServiceClassFilter" class="com.pain.flame.advisor.UserServiceClassFilter" />
    <bean id="userServiceMethodMatcher" class="com.pain.flame.advisor.UserServiceMethodMatcher" />
    <bean id="userServicePointcut" class="com.pain.flame.advisor.UserServicePointcut"
          p:classFilter-ref="userServiceClassFilter"
          p:methodMatcher-ref="userServiceMethodMatcher" />

    <bean id="userServiceAdvisor" class="com.pain.flame.advisor.UserServicePointcutAdvisor"
          p:advice-ref="userAroundAdvice"
          p:pointcut-ref="userServicePointcut" />

    <bean id="userServiceProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="userService" />
        <property name="interceptorNames" value="userServiceAdvisor" />
    </bean>
</beans>